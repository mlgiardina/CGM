<div class="login-form">
  <h2>Log In</h2>
  <%= form_tag create_session_path do %>
    <p> <%= label_tag :email, "Email" %> <%= text_field_tag :email %> </p>
    <p> <%= label_tag :password, "Password" %> <%= password_field_tag :password %> </p>
    <p> <%= link_to "Forgot Password?", new_password_reset_path %> </p>
    <p> <%= check_box_tag :remember_me, 1, params[:remember_me] %><%= label_tag :remember_me, "Remember Me" %>  </p>
    <button class="login-button">Log In</button>
  <% end %>
</div>
