<div class="garden-overview row">
  <h2><%= @garden.name %></h2>
    <div class="garden-container row">
      <% @plots.each do |plot| %>
        <div class="individual-plot">
          <div class="plot-number">
            <%= plot.plot_number %>
          </div>
          <div class="plot-owner">
            <%= plot.user.full_name %>
          </div>
          <div class="plot-plants">
            <% plot.plants.each do |plant| %>
              <div class="plant-name">
                <%= link_to plant.name %>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
</div>
